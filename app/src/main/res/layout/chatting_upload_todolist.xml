<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <EditText
        android:id="@+id/todoListUploadText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:ems="13"
        android:hint="내용을 입력하세요"
        android:padding="10dp"
        android:background="@drawable/round_rect_mainblue"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/todoListUploadButton"
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/round_rect_skyblue"
        android:text="추가"
        android:textColor="@color/blue_main"
        app:layout_constraintBaseline_toBaselineOf="@+id/todoListUploadText"
        app:layout_constraintStart_toEndOf="@+id/todoListUploadText" />
</androidx.constraintlayout.widget.ConstraintLayout>