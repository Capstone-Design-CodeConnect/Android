<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/studyGuestLogo"
            android:layout_width="234dp"
            android:layout_height="135dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studyGuestToolbar"
            app:srcCompat="@drawable/codeconnect_logo" />

        <androidx.appcompat.widget.Toolbar
        android:id="@+id/studyGuestToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/round_rect_two"
        app:menu="@menu/toolbar_menu_study">

        <TextView
            android:id="@+id/studyGuestToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="스터디 모집"
            android:textColor="@color/blue_main"
            android:textSize="16dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>


        <View
            android:id="@+id/viewGuestLine1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="40dp"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studyGuestImage"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/viewGuestLine2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="40dp"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guestContentText"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/guestNicknameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="63dp"
            android:text="nickname"
            android:textColor="@color/grey_dark"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/studyGuestImage"
            app:layout_constraintTop_toBottomOf="@+id/studyGuestLogo" />

        <TextView
            android:id="@+id/guestTitleText"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:text="title"
            android:textColor="@color/grey_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView16"
            app:layout_constraintTop_toBottomOf="@+id/viewGuestLine1" />

        <TextView
            android:id="@+id/guestContentText"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="content"
            android:textColor="@color/grey_dark"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/guestTitleText"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/guestFieldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="field"
            android:textColor="@color/grey_dark"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/textView8" />

        <TextView
            android:id="@+id/guestPersonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="참여인원"
            android:textColor="@color/grey_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/guestCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/grey_dark"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/guestPersonText"
            app:layout_constraintStart_toStartOf="@+id/guestFieldText" />

        <TextView
            android:id="@+id/guestCurrentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="currentTime"
            android:textColor="@color/grey_dark"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/guestNicknameText"
            app:layout_constraintEnd_toEndOf="parent" />


        <Button
            android:id="@+id/guestButton"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="130dp"
            android:background="@drawable/round_rect_skyblue"
            android:text="참여하기"
            android:textColor="@color/blue_main"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guestAddress2"
            tools:ignore="NotSibling" />

        <Button
            android:id="@+id/guestCancelButton"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="130dp"
            android:background="@drawable/round_rect_clear_stroke"
            android:text="취소하기"
            android:textColor="@color/blue_sky"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guestAddress2"
            tools:ignore="NotSibling" />

        <ImageView
            android:id="@+id/studyGuestImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView15"
            app:srcCompat="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="스터디 소개"
            android:textColor="@color/grey_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guestTitleText"
            app:layout_constraintTop_toBottomOf="@+id/guestTitleText" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="관심 분야"
            android:textColor="@color/grey_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guestContentText"
            app:layout_constraintTop_toBottomOf="@+id/viewGuestLine2" />

        <TextView
            android:id="@+id/guestAddress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="지역"
            android:textColor="@color/grey_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guestPersonText"
            app:layout_constraintTop_toBottomOf="@+id/guestPersonText" />

        <TextView
            android:id="@+id/guestAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/grey_dark"
            app:layout_constraintBaseline_toBaselineOf="@+id/guestAddress1"
            app:layout_constraintStart_toStartOf="@+id/guestCountText" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="32dp"
            android:tint="@color/blue_sky"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/studyGuestLogo"
            app:srcCompat="@drawable/icon_crown" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:text="Host"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageView15"
            app:layout_constraintTop_toBottomOf="@+id/studyGuestLogo" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="43dp"
            android:tint="@color/blue_sky"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewGuestLine1"
            app:srcCompat="@drawable/icon_study" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="40dp"
            android:tint="@color/blue_sky"
            app:layout_constraintStart_toStartOf="@+id/imageView16"
            app:layout_constraintTop_toBottomOf="@+id/viewGuestLine2"
            app:srcCompat="@drawable/icon_check" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="32dp"
            android:tint="@color/blue_sky"
            app:layout_constraintStart_toStartOf="@+id/imageView17"
            app:layout_constraintTop_toBottomOf="@+id/imageView17"
            app:srcCompat="@drawable/icon_person" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="32dp"
            android:tint="@color/blue_sky"
            app:layout_constraintStart_toStartOf="@+id/imageView18"
            app:layout_constraintTop_toBottomOf="@+id/imageView18"
            app:srcCompat="@drawable/icon_location" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>