<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end">

    <TextView
        android:id="@+id/chatMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_rect_mainblue"
        android:maxWidth="250dp"
        android:padding="7dp"
        android:text="chatMessage"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/myMessageNickname"
        app:layout_constraintTop_toBottomOf="@+id/myMessageNickname" />

    <TextView
        android:id="@+id/myMessageNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="nickname"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/chatMyImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/myMessageCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text="currentTime"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/chatMessageTextView"
        app:layout_constraintEnd_toStartOf="@+id/chatMessageTextView" />

    <ImageView
        android:id="@+id/chatMyImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_24" />
</androidx.constraintlayout.widget.ConstraintLayout>