<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/join_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/round_rect_background_blue"
    android:clickable="true"

    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <EditText
        android:id="@+id/editEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#515151"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textEmail"
        app:layout_constraintStart_toEndOf="@+id/textEmail" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#515151"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textPwd"
        app:layout_constraintStart_toEndOf="@+id/textPwd" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="E-mail"
        android:textColor="#515151"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textNickname"
        app:layout_constraintTop_toBottomOf="@+id/textNickname" />

    <TextView
        android:id="@+id/textPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Password"
        android:textColor="#515151"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textEmail"
        app:layout_constraintTop_toBottomOf="@+id/textEmail" />

    <TextView
        android:id="@+id/textAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="지역"
        android:textColor="#515151"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textPwdCheck"
        app:layout_constraintTop_toBottomOf="@+id/textPwdCheck" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="관심사를 2개 선택해주세요"
        android:textColor="#515151"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textAddress"
        app:layout_constraintTop_toBottomOf="@+id/textAddress" />

    <Button
        android:id="@+id/joinButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#CFDCFF"
        android:text="가입하기"
        android:textColor="#515151"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:stateListAnimator="@null"/>

    <android.widget.Button
        android:id="@+id/buttonAndroid"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_rect_mainblue"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="안드로이드"
        android:textAlignment="center"
        android:textColor="#515151"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:stateListAnimator="@null"/>

    <android.widget.Button
        android:id="@+id/buttonIos"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/round_rect_mainblue"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="ios"
        android:textAlignment="center"
        android:textColor="#515151"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonAndroid"
        app:layout_constraintStart_toEndOf="@+id/buttonAndroid"
        android:stateListAnimator="@null"/>

    <android.widget.Button
        android:id="@+id/buttonAlgorithm"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/round_rect_mainblue"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="알고리즘"
        android:textAlignment="center"
        android:textColor="#515151"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonIos"
        app:layout_constraintStart_toEndOf="@+id/buttonIos"
        android:stateListAnimator="@null"/>

    <android.widget.Button
        android:id="@+id/buttonDatabase"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_rect_mainblue"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="데이터베이스"
        android:textAlignment="center"
        android:textColor="#515151"
        app:layout_constraintStart_toStartOf="@+id/buttonAndroid"
        app:layout_constraintTop_toBottomOf="@+id/buttonAndroid"
        android:stateListAnimator="@null"/>

    <android.widget.Button
        android:id="@+id/buttonOs"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/round_rect_mainblue"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="운영체제"
        android:textAlignment="center"
        android:textColor="#515151"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDatabase"
        app:layout_constraintStart_toEndOf="@+id/buttonDatabase"
        android:stateListAnimator="@null"/>

    <android.widget.Button
        android:id="@+id/buttonServer"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/round_rect_mainblue"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="서버"
        android:textAlignment="center"
        android:textColor="#515151"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonOs"
        app:layout_constraintStart_toEndOf="@+id/buttonOs"
        android:stateListAnimator="@null"/>

    <android.widget.Button
        android:id="@+id/buttonWeb"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_rect_mainblue"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="웹"
        android:textAlignment="center"
        android:textColor="#515151"
        app:layout_constraintStart_toStartOf="@+id/buttonDatabase"
        app:layout_constraintTop_toBottomOf="@+id/buttonDatabase"
        android:stateListAnimator="@null"/>

    <android.widget.Button
        android:id="@+id/buttonMachine"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/round_rect_mainblue"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="머신러닝"
        android:textAlignment="center"
        android:textColor="#515151"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonWeb"
        app:layout_constraintStart_toEndOf="@+id/buttonWeb"
        android:stateListAnimator="@null"/>

    <android.widget.Button
        android:id="@+id/buttonEtc"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/round_rect_mainblue"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="기타"
        android:textAlignment="center"
        android:textColor="#515151"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonMachine"
        app:layout_constraintStart_toEndOf="@+id/buttonMachine"
        android:stateListAnimator="@null"/>

    <TextView
        android:id="@+id/textViewAddress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:ems="13"
        android:text="주소를 검색하세요"
        android:textColor="#515151"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textAddress"
        app:layout_constraintStart_toEndOf="@+id/textAddress" />

    <TextView
        android:id="@+id/textNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:text="Nickname"
        android:textColor="#515151"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#515151"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textNickname"
        app:layout_constraintStart_toEndOf="@+id/textNickname" />

    <TextView
        android:id="@+id/textPwdCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="PasswordCheck"
        android:textColor="#515151"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textPwd"
        app:layout_constraintTop_toBottomOf="@+id/textPwd" />

    <EditText
        android:id="@+id/editPwdCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textPwdCheck"
        app:layout_constraintStart_toEndOf="@+id/textPwdCheck" />

    <TextView
        android:id="@+id/textPwdEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*영문, 숫자, 특수문자를 사용하여 8~10자로 입력해주세요"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/editTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>
